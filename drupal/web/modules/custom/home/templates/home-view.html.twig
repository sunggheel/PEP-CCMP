<!-- $goalsList -->
<!-- goals cards Start -->
<br>
<div class="text-center">
    <h1 class="montserrat mb-4">{{ goalsList.title }}</h1>
</div>

<div class="d-flex justify-content-evenly">
  {% for goal in goalsList.goals %}
    <a href={{ goal.href }} class="goal-link bg-{{ goal.code }}"
    onmouseover="showInfo({{ loop.index0 }})" onmouseout="hideInfo({{ loop.index0 }})"> 
      <center class="goal-center">
        <img id="img-{{ goal.code }}" src={{ goal.src }} class="goal-img" alt="Goal: {{ goal.alt }}">
        <div id="info-{{ goal.code }}" class="hide info-div">
          <!-- p class="goal-title">{{ goal.alt }}</p -->
          <div class="goal-info">
            <div class="">
              <span class="goal-text">{{goal.stats.objectives}} Objectives</span>
            </div>
            <div class="">
              <span class="goal-text">{{goal.stats.actions}} Actions</span>
            </div>
            <div class="">
              <span class="goal-text">{{goal.stats.projects}} Projects</span>
            </div>
            <div class="">
              <span class="goal-text">{{goal.stats.projectCompletion}}% Projects Complete</span>
            </div>
          </div>
        </div>
      </center>
    </a>
  {% endfor %}
</div>
<br>

<br><br>

<!-- goals cards End -->

